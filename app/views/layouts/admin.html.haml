!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ExistenceRor
    = csrf_meta_tags
    = csp_meta_tag
    -# = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .main-container{ class: "#{ controller_name }_#{ action_name }" }
      %ul.nav.nav-tabs
        - if current_admin.hight?
          %li.nav-item
            = link_to t('users'), admin_users_path, class: "nav-link #{ 'active' if controller_name == 'users' }"
          %li.nav-item
            = link_to t('admins'), admin_admins_path, class: "nav-link #{ 'active' if controller_name == 'admins' }"
        %li.nav-item
          = link_to t('activity'), admin_activities_path, class: "nav-link #{ 'active' if controller_name == 'activities' }"
        %li.nav-item
          = link_to t('log_out'), sessions_path, method: :delete, data: { confirm: t('are_you_sure') }, class: 'nav-link'

      = yield
