= simple_form_for [:admin, user] do |f|
  .form-row
    .col
      = f.input :first_name, input_html: { class: 'form-control' }
    .col
      = f.input :last_name, input_html: { class: 'form-control' }
  .form-group
    = f.input :position, input_html: { class: 'form-control' }
  .form-row
    .col
      = f.input :rank, input_html: { class: 'form-control' }
    .col
      = f.input :level, input_html: { class: 'form-control' }
  %br
  .form-group
    = f.submit :submit, class: 'btn btn-primary'
