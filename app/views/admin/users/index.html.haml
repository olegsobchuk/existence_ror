= link_to t('new'), new_admin_user_path, class: 'btn btn-primary'
%div
  %h2= t('user_list')
  %table.table
    %thead
      %th= t('first_name')
      %th= t('last_name')
      %th= t('position')
      %th= t('rank')
      %th= t('level')
      %th= t('actions')
    %tbody
      - @users.each do |user|
        %tr
          %th= user.first_name
          %th= user.last_name
          %th= user.position
          %th= user.rank
          %th= user.level
          %th
            = link_to t('edit'), edit_admin_user_path(user), class: 'btn btn-info'
            = link_to t('delete'),
                      admin_user_path(user),
                      method: :delete,
                      class: 'btn btn-danger',
                      data: { confirm: t('are_you_sure') }
