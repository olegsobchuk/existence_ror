= simple_form_for [:admin, admin] do |f|
  .form-row
    .col
      = f.input :first_name, input_html: { class: 'form-control' }
    .col
      = f.input :last_name, input_html: { class: 'form-control' }
  .form-row
    .col
      = f.input :login, input_html: { class: 'form-control' }
    .col
      = f.input :role, collection: Admin.roles.keys, include_blank: 'Select role', input_html: { class: 'form-control' }
  .form-row
    .col
      = f.input :password, input_html: { class: 'form-control' }
    .col
      = f.input :password_confirmation, input_html: { class: 'form-control' }
  %br
  .form-group
    = f.submit :submit, class: 'btn btn-primary'
