= simple_form_for [:admin, admin] do |f|
  .form-row
    .col
      = f.input :first_name, label: t('first_name'), input_html: { class: 'form-control' }
    .col
      = f.input :last_name, label: t('last_name'), input_html: { class: 'form-control' }
  .form-row
    .col
      = f.input :login, label: t('login'), input_html: { class: 'form-control' }
    .col
      = f.input :role,
                label: t('role'),
                collection: Admin.roles.keys,
                include_blank: t('select_role'),
                input_html: { class: 'form-control' }
  .form-row
    .col
      = f.input :password, label: t('password'), input_html: { class: 'form-control' }
    .col
      = f.input :password_confirmation, label: t('password_confirmation'), input_html: { class: 'form-control' }
  %br
  .form-group
    = f.submit :submit, class: 'btn btn-primary'
